one:
#include<bits/stdc++.h>
using namespace std;
struct node{
    int expon;
    double coef;
};
int main(){
    vector<node> a,b,ans;
    int m,n;
    node temp;
    cin>>m;
    for(int i=0;i<m;i++){
        cin>>temp.expon>>temp.coef;
        a.push_back(temp);
    }
   cin >> n;
    for(int i =0;i<n;i++){
        cin>>temp.expon>>temp.coef;
        b.push_back(temp);
    }
    
    int i=0,j=0;
    while(i<m&&j<n){
        if(a[i].expon>b[j].expon)
            ans.push_back(a[i++]);
        if(a[i].expon<b[j].expon)
            ans.push_back(b[j++]);
        else{
            temp.expon=a[i].expon;
            temp.coef=a[i++].coef+b[j++].coef;
            if(temp.coef) ans.push_back(temp);
        }
    }
    while(i<m) ans.push_back(a[i++]);
    while(j<n) ans.push_back(b[j++]);
    cout<<ans.size();
    for(int i=0;i<ans.size();i++) printf(" %d %.1f",ans[i].expon,ans[i].coef);
    return 0;
}




two 
#include <iostream>
#include <iomanip>
using namespace std;
double a[1005];
int main(){
	int n,k,x,m,count = 0;
	double y;
	cin>>m;
	for(int i = 0; i < m; i++){
		cin>>x>>y;
		a[x] += y;
	}
	cin>>m;
	for(int i = 0; i < m; i++){
		cin>>x>>y;
		a[x] += y;
	}
	for(int i = 0; i < 1001; i++){
		if(a[i] != 0) count++;
	} 
	cout<<count;
	for(int i = 1001; i >= 0; i--){
		if(a[i] != 0){
			cout<<" "<<i<<" "<<setiosflags(ios::fixed)<<setprecision(1)<<a[i];
		}
	}
	return 0;
} 
